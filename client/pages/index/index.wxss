/**index.wxss**/

page {
  background: #f6f6f6;
}

.home__search--container {
  border: 1rpx solid #ccc;
  position: relative;
  display: flex;
  width: 100vw;
  padding: 10rpx 20rpx;
  background: white;
  box-shadow: 2rpx 2px 2px #ccc;
}

.home__search--icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
  position: absolute;
}

.icon__search {
  left: 60rpx;
  top: 20rpx;
}

.icon__record {
  right: 60rpx;
  top: 20rpx;
}

.home__search--input {
  font-size: 36rpx;
  text-indent: 1em;
  text-align: center;
  width: 100vw;
}



.people__list {
  display: flex;
  flex-direction: column;
  width: 100vw;
  margin-top: 20rpx;
}

