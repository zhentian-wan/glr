.peoplecard__container {
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  padding: 10rpx 8rpx;
  align-items: center;
  background: white;
  margin-top: 20rpx;
  box-shadow: 2rpx 2rpx 2rpx #ccc;
}

.peoplecard__container:not(:last-child) {
  border-bottom: 1px solid #ccc;
}

.peoplecard__image {
  width: 180rpx;
  margin-right: 11rpx;
  flex-shrink: 0;
  border-radius: 90rpx;
}

.peoplecard__info--category {
  font-size: 22rpx;
  border: 1rpx solid #ccc;
  opacity: 0.8;
  height: 30rpx;
  padding: 2rpx 10rpx;
  border-radius: 5rpx;
  margin-right: 8rpx;
}

.peoplecard__info--name {
  font-weight: bold;
  padding-right: 5rpx;
  text-align: center;
  margin-top: 5rpx;
}

.peoplecard__info--content {
  opacity: 0.7;
}

.actions {
  opacity: 0.5;
}

.peoplecard__info--container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4rpx 16rpx;
}

.peoplecard__info--line {
  display: flex;
  flex-direction: row;
  margin-top: 8rpx;
}

.peoplecard__info--title {
  font-size: 32rpx;
  font-weight: bold;
}

.peoplecard__info--price::before {
  content: '¥ ';
}

.peoplecard__info--price {
  flex-shrink: 0;
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: orange;
}

.peoplecard__info--price::after {
  content: '/次';
  color: black;
  opacity: 0.5;
}

.peoplecard__container--left {
  display: flex;
  flex-direction: column;
}

.space-between {
  justify-content: space-between;
}
