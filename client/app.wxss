.home__category--container {
  max-height: 100px;
  height: auto;
  margin-top: 15rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.home__category--container button {
  float: left;
  flex-shrink: 0;
  background: white;
  font-size: 26rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}


